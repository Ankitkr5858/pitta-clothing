<script>
  // js part for click on sizes on popup

  var cartSubmitButton = document.querySelector('.pdp-product-details .bm-atc');
  var sizeChartButton = document.querySelector('.upsel-size-chart');
  var modalOverlay = document.querySelector('.upsell-modal-overlay');

  const selectSizeOptions = document.querySelectorAll('.varient-popup  .product-form__chip-input');

  selectSizeOptions.forEach(function(el){
    el.addEventListener('click',function(){
     document.querySelector('.varient-popup .add_to_cart').click();
    })
  })

  if (cartSubmitButton) {
    cartSubmitButton.addEventListener('click', function () {
      document.body.classList.add('upsel-size-varient');
    });
  }

  if (sizeChartButton) {
    sizeChartButton.addEventListener('click', function () {
      document.querySelector('.bm-size-chart').click();
    });
  }

  if (sizeChartButton) {
    modalOverlay.addEventListener('click', function () {
      document.body.classList.remove('upsel-size-varient');
    });
  }
</script>
 