{% render 'pages--password' with
  id: section.id,

  background_image: section.settings.background_image,
  background_overlay_opacity: section.settings.background_overlay_opacity,
  background_overlay_color: section.settings.background_overlay_color,
  header_image: section.settings.header_image,
  background_color: section.settings.background_color,

  heading: section.settings.heading,
  text: section.settings.text,
  text_color: section.settings.text_color,
  show_share: section.settings.show_share,
  below_text: section.settings.below_text,
  below_button_text: section.settings.below_button_text,
  below_button_url: section.settings.below_button_url,
%}

{% schema %}
  {
    "name": "Password page",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#D5F7F6"
      },
      {
        "type": "image_picker",
        "id": "header_image",
        "label": "Header image"
      },
      {
        "type": "range",
        "id": "background_overlay_opacity",
        "label": "Background overlay opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "default": 20
      },
      {
        "type": "color",
        "id": "background_overlay_color",
        "label": "Background overlay color",
        "default": "#000000"
      },
      {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Opening Soon"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text",
        "default": "<p>Find out when we open<p>"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "id": "show_share",
        "type": "checkbox",
        "label": "Show share buttons",
        "default": true
      },
      {
        "type": "header",
        "content": "Below content"
      },
      {
        "id": "below_text",
        "type": "richtext",
        "label": "Below text",
        "default": "<p>If you want to have access to our store, join our  VIP Facebook group now!<p>"
      },
      {
        "id": "below_button_text",
        "type": "text",
        "label": "Below button text",
        "default": "JOIN NOW"
      },
      {
        "id": "below_button_url",
        "type": "url",
        "label": "Below button link"
      }
    ]
  }
{% endschema %}
