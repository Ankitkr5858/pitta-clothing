{% render 'content--text-columns-with-images' with
  id: section.id,
  section_color: section.settings.bg_color,
  section_style: section.settings.section_style,
  columns: section.settings.columns,
  text_alignment: section.settings.text_alignment,
  text_max_width: section.settings.text_max_width,
  overline: section.settings.overline,
  heading: section.settings.title,
  subheading: section.settings.subheading,
  link: section.settings.link,
  link_text: section.settings.link_text,
  bg_columns: section.settings.bg_columns,
  full_width_images: section.settings.full_width_images,
  blocks: section.blocks,
%}

{% schema %}
  {
    "name": "Text columns with images",
    "class": "section-dynamic section-borderable columns",
    "settings": [
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Section Color"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Style",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "contrast",
            "label": "Contrast"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "type": "range",
        "id": "columns",
        "label": "Columns",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading",
        "default": "Text columns with images"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Text columns with images section"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "This section is designed for steps or policies. Tell your brand's story, describe how a product is made, or outline shipping stages."
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Button above column"
      },
      {
        "type": "url",
        "id": "link_below",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text_below",
        "label": "Button below column"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 36
      },
      {
        "type": "color",
        "id": "bg_columns",
        "label": "Columns Color"
      },
      {
        "type": "checkbox",
        "id": "full_width_images",
        "label": "Full width images in columns"
      }
    ],
    "max_blocks": 8,
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "image_max_width",
            "label": "Max image width",
            "min": 10,
            "max": 100,
            "step": 10,
            "default": 50
          },
          {
            "type": "text",
            "id": "pre_heading",
            "label": "Preheading"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Column heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading",
            "default": "Column text"
          },
          {
            "type": "range",
            "id": "text_max_width",
            "label": "Max width of text",
            "min": 16,
            "max": 50,
            "step": 1,
            "default": 36
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text",
            "default": "Read more"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text columns with images",
        "category": "Text",
        "blocks": [
          {
            "type": "column",
            "settings": {
              "title": "Column one",
              "subheading": "Start here. Introduce your vision, or explain why what you do or sell is superior to your competitors.",
              "link_text": "Read more"
            }
          },
          {
            "type": "column",
            "settings": {
              "title": "Column two",
              "subheading": "Get into your process a bit. The quality of handiwork, proprietary knowledge, or materials that you use that make your products better. ",
              "link_text": "Read more"
            }
          },
          {
            "type": "column",
            "settings": {
              "title": "Column three",
              "subheading": "End it with an action item that the user can take advantage of. Link to a more in-depth page, or go straight to a collection. Your call.",
              "link_text": "Read more"
            }
          }
        ]
      }
    ]
  }
{% endschema %}