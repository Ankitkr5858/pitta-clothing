<div class="product-page-wrapper"><div class="product-page-wrapper__inner">
  {% unless section.settings.image %}
        {% if section.settings.title != blank %}
          <h1 class="type-heading-1 tc mt0 mb5">
            {{ section.settings.title | escape }}
          </h1>
        {% else %}
          <h1 class="type-heading-1 tc mt0 mb5">
            {{ page.title }}
          </h1>
        {% endif %}
        {% if section.settings.subtext != blank %}
          <div class="subtitle_content">
            {{ section.settings.subtext }}
          </div>
        {% endif %}
  {% endunless %}
  {% if page.content != blank %}
    <div class="sixteen columns page clearfix">
      <div>
        {% include 'page-multi-column', content: page.content %}
      </div>
    </div>
  {% endif %}
  <div class="sixteen columns faq">
    {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% if block.type == "heading" %}
            {% if block.settings.heading != blank %}
              <h2 class="faq-accordion--heading">{{ block.settings.heading }}</h2>
            {% endif %}
          {% endif %}
          {% if block.settings.title != blank %}
        <ul>    
          <li><a href="#" class="open-bio">{{ block.settings.title }}</a>
      <div class="bio-more"> {{ block.settings.subtitle }}</div>
    </li>
    </ul>

          {% endif %}
        {% endfor %}
    {% endif %}
  </div>
  </div></div>

